@model Craftwork_Project.Domain.Models.PurchaseDetail
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Purchase details
    </h1>
</section>

<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Update purchase detail</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/admin/purchasedetails/create">
            <div class="box-body">
                <div class="form-group">
                    <label asp-for="UserId" class="col-sm-2 control-label">User</label>
                    <div class="col-sm-10">
                        <select asp-for="UserId" asp-items="@(new SelectList(ViewBag.AllUsers, "Id", dataTextField: "UserName"))" class="form-control"></select>
                        <span asp-validation-for="UserId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ProductId" class="col-sm-2 control-label">Product</label>
                    <div class="col-sm-10">
                        <select asp-for="ProductId" asp-items="@(new SelectList(ViewBag.AllProducts, "Id", dataTextField: "Name"))" class="form-control"></select>
                        <span asp-validation-for="UserId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="col-sm-2 control-label">Amount</label>
                    <div class="col-sm-10">
                        <input asp-for="Amount" type="text" class="form-control" placeholder="Amount">
                        <span asp-validation-for="Amount"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Processed" class="col-sm-2 control-label">Processed</label>
                    <div class="col-sm-10">
                        <input asp-for="Processed" type="checkbox" style="position: relative; top: 6px" placeholder="Processed">
                        <span asp-validation-for="Processed"></span>
                    </div>
                </div>
                <div class="form-group">
                <label asp-for="Finished" class="col-sm-2 control-label">Finished</label>
                <div class="col-sm-10">
                    <input asp-for="Finished" type="checkbox" style="position: relative; top: 6px" placeholder="Finished">
                    <span asp-validation-for="Finished"></span>
                </div>
            </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <input type="button" class="btn btn-info" value="Cancel" onclick="location.href='/admin/purchasedetails/'">
                <button type="submit" class="btn btn-info pull-right" id="createBtn" onclick="this.disabled = true; this.value = 'Updating'; this.form.submit();">Update</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>