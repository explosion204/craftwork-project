@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.EntityFrameworkCore
@model IQueryable<Craftwork_Project.Domain.Models.Product>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/select/1.3.1/css/select.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.6.4/css/buttons.dataTables.min.css">

<section class="content-header">
    <h1>
    Products
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
    <div class="col-xs-12">
        <div class="box">
        <div class="box-header">
            <h3 class="box-title">Manage products</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>In stock</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Include(modelItem => modelItem.Category).ToList())
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Desc)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.InStock)</td>
                        <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                        <td><a href="/admin/products/update/@item.Id">Update</a> | <a href="" onclick="Delete('@item.Id')">Delete</a></td>
                    </tr>
                }
            </table>
        </div>
        <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- page script -->
<script>
    $(function () {
        $('#example1').DataTable({
            dom: 'Bfrtip',
            buttons: [
                {
                    text: 'New product',
                    
                    action: function ( e, dt, node, config ) {
                        window.location.replace('/admin/products/create')
                    }
                }
            ]
        });
    });
    
    function Delete(id, callback){
        var r = confirm("Are you sure you want to Delete?");
        if (r) {
            $.ajax(
            {
                type: 'POST',
                dataType: 'text',
                url: '/admin/products/delete',
                data: {
                    id: id
                },
                async: false,
                success: function (result) {
                    location.reload();
                }
            });
        } 
    }
</script>