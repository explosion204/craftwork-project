@model CraftworkProject.Web.ViewModels.Account.ForgotPasswordViewModel

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border border">
                    <h3 class="bg-gray p-4">Reset password</h3>
                    <form method="post" action="/account/forgotpassword">
                        <fieldset class="p-4">
                            <input asp-for="Email" type="email" placeholder="Email" class="border p-3 w-100 my-2">
                            <button type="submit" class="d-block py-3 px-4 bg-primary text-white border-0 rounded font-weight-bold"
                                    onclick="this.disabled = true; this.form.submit();">Reset</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>