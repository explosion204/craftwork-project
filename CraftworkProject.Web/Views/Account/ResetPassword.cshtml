@model CraftworkProject.Web.ViewModels.ResetPasswordViewModel

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border border">
                    <h3 class="bg-gray p-4">Reset password</h3>
                    <form method="post" action="/account/resetpassword">
                        <fieldset class="p-4">
                            <input hidden asp-for="UserId">
                            <input hidden asp-for="Token">
                            <input asp-for="NewPassword" type="password" placeholder="New Password" class="border p-3 w-100">
                            <span asp-validation-for="NewPassword"></span>
                            <input asp-for="ConfirmNewPassword" type="password" placeholder="Confirm New Password" class="border p-3 w-100 my-2">
                            <span asp-validation-for="ConfirmNewPassword"></span>
                            <button type="submit" class="d-block py-3 px-4 bg-primary text-white border-0 rounded font-weight-bold">Reset</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>