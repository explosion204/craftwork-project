@model CraftworkProject.Web.ViewModels.UserViewModel

<section class="user-profile section">
	<div class="container">
		<div class="row">
			<div class="col-md-10 offset-md-1 col-lg-3 offset-lg-0">
				<div class="sidebar">
					<!-- User Widget -->
					<div class="widget user">
						<!-- User Image -->
						<div class="image d-flex justify-content-center">
							<img src="~/img/profile/@Model.CurrentProfilePicture" alt="" class="">
						</div>
						<!-- User Name -->
						<h5 class="text-center">@Model.Username</h5>
					</div>
					<div class="widget user-dashboard-menu">
						<ul>
							<li class="active"><a href="dashboard-my-ads.html"><i class="fa"></i>Reviews<span>5</span></a></li>
							<li><a href="#"><i class="fa"></i>Wishlist<span>5</span></a></li>
							<li><a href="#"><i class="fa"></i>Pending orders<span>12</span></a></li>
							<li><a href="#"><i class="fa "></i>Finished orders<span>23</span></a></li>
							<li><a href="/account/logout"><i class="fa fa-cog"></i> Logout</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-md-10 offset-md-1 col-lg-9 offset-lg-0">
				<!-- Edit Profile Welcome Text -->
				<div class="widget welcome-message">
					<h2>Edit profile</h2>
					<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation</p>
				</div>
				<!-- Edit Personal Info -->
				<div class="row">
					<div class="col-lg-6 col-md-6">
						<div class="widget personal-info">
							<h3 class="widget-header user">Edit Personal Information</h3>
							<form method="post" action="/account/changepersonalinfo" enctype="multipart/form-data">
								<input hidden asp-for="Id">
								<input hidden asp-for="Username">
								<input hidden asp-for="CurrentPassword">
								<!-- First Name --> 	
								<div class="form-group">
									<label asp-for="FirstName" for="first-name">First Name</label>
									<input asp-for="FirstName" type="text" class="form-control" id="first-name">
									<span asp-validation-for="FirstName"></span>
								</div>
								<!-- Last Name -->
								<div class="form-group">
									<label asp-for="LastName" for="last-name">Last Name</label>
									<input asp-for="LastName" type="text" class="form-control" id="last-name">
									<span asp-validation-for="LastName"></span>
								</div>
								<!-- File chooser -->
								<div class="form-group choose-file d-inline-flex">
									<i class="fa fa-user text-center px-3"></i>
									<input asp-for="ProfilePicture" type="file" class="form-control-file mt-2 pt-1" id="input-file">
									<span asp-validation-for="ProfilePicture"></span>
								</div>
								<!-- Submit button -->
								<button class="btn btn-transparent">Save Changes</button>
							</form>
						</div>
					</div>
					<div class="col-lg-6 col-md-6">
						<!-- Change Password -->
						<div class="widget change-password">
							<h3 class="widget-header user">Change Password</h3>
							<form method="post" action="/account/changepassword">
								<input hidden asp-for="Id">
								<input hidden asp-for="Username">
								<input hidden asp-for="FirstName">
								<input hidden asp-for="LastName">
								<!-- Current Password -->
								<div class="form-group">
									<label asp-for="CurrentPassword" for="current-password">Current Password</label>
									<input asp-for="CurrentPassword" type="password" class="form-control" id="current-password">
									<span asp-validation-for="CurrentPassword"></span>
								</div>
								<!-- New Password -->
								<div class="form-group">
									<label asp-for="NewPassword" for="new-password">New Password</label>
									<input asp-for="NewPassword" type="password" class="form-control" id="new-password">
									<span asp-validation-for="NewPassword"></span>
								</div>
								<!-- Confirm New Password -->
								<div class="form-group">
									<label asp-for="ConfirmNewPassword" for="confirm-password">Confirm New Password</label>
									<input asp-for="ConfirmNewPassword" type="password" class="form-control" id="confirm-password">
									<span asp-validation-for="ConfirmNewPassword"></span>
								</div>
								<!-- Submit Button -->
								<button class="btn btn-transparent">Change Password</button>
							</form>
						</div>
					</div>
					<div class="col-lg-6 col-md-6">
						<!-- Change Phone Number -->
						<div class="widget change-email mb-0">
							<h3 class="widget-header user">Edit Phone Number</h3>
							<div class="form-group">
								<label for="zip-code">Phone Number</label>
								<input readonly type="text" class="form-control" id="zip-code">
								<button data-toggle="modal" data-target="#new-phone-number-modal" class="btn btn-transparent my-4">Change</button>
							</div>
						</div>
					</div>
					<div class="col-lg-6 col-md-6">
						<!-- Change Email Address -->
						<div class="widget change-email mb-0">
							<h3 class="widget-header user">Edit Email Address (in future)</h3>
							<form action="#">
								<!-- Current Password -->
								<input hidden asp-for="Id">
								<input hidden asp-for="Username">
								<input hidden asp-for="FirstName">
								<input hidden asp-for="LastName">
								<div class="form-group">
									<label for="current-email">Current Email</label>
									<input readonly type="email" class="form-control" id="current-email">
								</div>
								<!-- New email -->
								<div class="form-group">
									<label for="new-email">New email</label>
									<input readonly type="email" class="form-control" id="new-email">
								</div>
								<!-- Submit Button -->
								<button disabled class="btn btn-transparent">Change email</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<div class="modal fade" id="new-phone-number-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header border-bottom-0">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body text-center">
				<h6 class="py-2">Change Your Phone Number</h6>
				<div class="form-group">
					<input type="tel" placeholder="New phone number" class="form-control" id="new-phone-nunber">
				</div>
			</div>
			<button type="button" class="btn btn-primary mb-3 mx-3 justify-content-center"><a>Send Code</a></button>
		</div>
	</div>
</div>

<div class="modal fade" id="confirm-new-phone-number-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header border-bottom-0">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body text-center">
				<h4 class="py-2">Confirm Your Phone Number</h4>
				<h6 class="py-2">We sent an SMS with confirmation code. Please enter it to finish setting up phone number.</h6>
				<div class="form-group">
					<input placeholder="Code from SMS" maxlength="4" pattern="\d{4}" class="form-control" id="new-phone-nunber">
				</div>
			</div>
			<div class="modal-footer border-top-0 mb-3 mx-5 justify-content-lg-between justify-content-center">
				<button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-primary">Confirm</button>
			</div>
		</div>
	</div>
</div>