@model CraftworkProject.Web.ViewModels.LoginViewModel

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border">
                    <h3 class="bg-gray p-4">Login Now</h3>
                    <form method="post" action="/account/login?returnUrl=@ViewBag.returnUrl">
                        <fieldset class="p-4">
                            <input asp-for="Username" type="text" placeholder="Username" class="border p-3 w-100 my-2">
                            <span asp-validation-for="Username"></span>
                            <input asp-for="Password" type="password" placeholder="Password" class="border p-3 w-100">
                            <span asp-validation-for="Password"></span>
                            <button type="submit" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-2"
                                    onclick="this.disabled = true; this.form.submit();">Log in</button>
                            <a class="mt-3 d-block  text-primary" href="/account/forgotpassword">Forgot Password?</a>
                            <a class="mt-3 d-inline-block text-primary" href="/account/signup">Register Now</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>