@model CraftworkProject.Web.ViewModels.Account.LoginViewModel

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border">
                    <h3 class="bg-gray p-4 text-center">Log in into your account</h3>
                    <form method="post" action="/account/login?returnUrl=@ViewData["returnUrl"]">
                        <fieldset class="p-4">
                            <input asp-for="Username" type="text" placeholder="Username" class="border p-3 w-100 my-2">
                            <span asp-validation-for="Username"></span>
                            <input asp-for="Password" type="password" placeholder="Password" class="border p-3 w-100">
                            <span asp-validation-for="Password"></span>
                            @{
                                // TODO: Make ALL buttons not clickable after submit!
                            }
                            <button type="submit" class="d-block py-3 my-3 w-100 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-2"
                                    onclick="this.disabled = true; this.form.submit();">Log in</button>
                            <a class="mt-3 d-block text-primary" href="/account/forgotpassword">Forgot password?</a>
                            <a class="mt-3 d-inline-block text-primary" href="/account/signup">Haven't got account? Create a new one</a>
                        </fieldset>
                    </form>
                </div>
            </div>
            
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border">
                    <h3 class="bg-gray p-4 text-center">Use external services to log in</h3>
                    <form method="post" action="/account/externallogin?returnUrl=@ViewData["returnUrl"]">
                        <fieldset class="p-4">
                            <button class="d-block py-3 px-4 my-2 w-100 bg-primary text-white border-0 rounded font-weight-bold">Google Account</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>