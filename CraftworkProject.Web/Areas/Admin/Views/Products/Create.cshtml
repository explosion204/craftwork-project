@model CraftworkProject.Web.Areas.Admin.ViewModels.ProductViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Products
    </h1>
</section>

<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Add product</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/admin/products/create">
            <div class="box-body">
                <div class="form-group">
                    <label asp-for="Name" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="Name" type="text" class="form-control" name="Name" placeholder="Name">
                        <span style="display: block; margin-top: 10px" asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Desc" class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                        <input asp-for="Desc" type="text" class="form-control" name="Desc" placeholder="Description">
                        <span style="display: block; margin-top: 10px" asp-validation-for="Desc"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="col-sm-2 control-label">Price</label>
                    <div class="col-sm-10">
                        <input asp-for="Price" type="text" class="form-control" name="Price" placeholder="Price">
                        <span style="display: block; margin-top: 10px" asp-validation-for="Price"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="InStock" class="col-sm-2 control-label">In stock</label>
                    <div class="col-sm-10">
                        <input asp-for="InStock" type="checkbox" style="position: relative; top: 6px" name="InStock" placeholder="In stock">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath" class="col-sm-2 control-label">Image path</label>
                    <div class="col-sm-10">
                        <input asp-for="ImagePath" type="text" class="form-control" name="ImagePath" placeholder="Image path">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="col-sm-2 control-label">Category</label>
                    <div class="col-sm-10">
                        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.AllCategories, "Id",dataTextField: "Name"))" class="form-control"></select>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <input type="button" class="btn btn-info" value="Cancel" onclick="location.href='/admin/products/'">
                <button type="submit" class="btn btn-info pull-right" id="createBtn" disabled onclick="this.disabled = true; this.value = 'Creating'; this.form.submit();">Create</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>

<script>    
    window.onload = function () {
        @if (ViewBag.AllCategories.Count != 0) {
            @:document.getElementById('createBtn').disabled = false; 
        }
    }
</script>