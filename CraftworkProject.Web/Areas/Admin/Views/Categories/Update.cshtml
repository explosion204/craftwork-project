@model CraftworkProject.Domain.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<section class="content-header">
    <h1>
    Categories
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Update category</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" method="post" action="/admin/categories/update">
        <div class="box-body">
            <div class="form-group">
                <label asp-for="Name" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" name="Name" value="@Model.Name">
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Desc" class="col-sm-2 control-label">Description</label>
                <div class="col-sm-10">
                    <input asp-for="Desc" type="text" class="form-control" name="Desc" placeholder="Description" value="@Model.Desc">
                    <span asp-validation-for="Desc"></span>
                </div>
            </div>
            <input asp-for="Id" type="hidden" name="Id" value="@Model.Id"/>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <input type="button" class="btn btn-info" value="Cancel" onclick="location.href='/admin/categories/'">
            <button type="submit" class="btn btn-info pull-right" onclick="this.disabled = true; this.value = 'Updating'; this.form.submit();">Update</button>
        </div>
        <!-- /.box-footer -->
    </form>
    </div>
    <!-- /.box -->
</section>