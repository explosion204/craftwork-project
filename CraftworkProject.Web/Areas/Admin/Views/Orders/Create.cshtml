@model CraftworkProject.Web.Areas.Admin.ViewModels.OrderViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Orders
    </h1>
</section>

<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Add order</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="/admin/orders/create">
            <div class="box-body">
                <div class="form-group">
                    <label asp-for="UserId" class="col-sm-2 control-label">User</label>
                    <div class="col-sm-10">
                        <select asp-for="UserId" asp-items="@(new SelectList(ViewBag.AllUsers, "Id", dataTextField: "Username"))" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Processed" class="col-sm-2 control-label">Processed</label>
                    <div class="col-sm-10">
                        <input asp-for="Processed" type="checkbox" style="position: relative; top: 6px" placeholder="Processed">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Canceled" class="col-sm-2 control-label">Canceled</label>
                    <div class="col-sm-10">
                        <input asp-for="Canceled" type="checkbox" style="position: relative; top: 6px" placeholder="Canceled">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Finished" class="col-sm-2 control-label">Finished</label>
                    <div class="col-sm-10">
                        <input asp-for="Finished" type="checkbox" style="position: relative; top: 6px" placeholder="Finished">
                    </div>
                </div>
                <input hidden asp-for="Created">
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <input type="button" class="btn btn-info" value="Cancel" onclick="location.href='/admin/orders/'">
                <button type="submit" class="btn btn-info pull-right" id="createBtn" onclick="this.disabled = true; this.value = 'Creating'; this.form.submit();">Create</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>